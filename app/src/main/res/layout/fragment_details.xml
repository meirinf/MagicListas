<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="test.magiclistas.detailsFragment"
    tools:showIn="@layout/activity_details">

    <TextView
        android:id="@+id/details_Rareza"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_nombreCarta"
        android:layout_alignStart="@+id/details_nombreCarta" />

    <TextView
        android:id="@+id/details_nombreCarta"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/details_imagenCarta" />

    <TextView
        android:id="@+id/details_Color"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_Tipo"
        android:layout_alignStart="@+id/details_Tipo" />

    <TextView
        android:id="@+id/details_Tipo"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_Rareza"
        android:layout_alignStart="@+id/details_Rareza" />

    <ImageView
        android:id="@+id/details_imagenCarta"
        android:layout_width="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/details_texto"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_imagenCarta"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
</layout>