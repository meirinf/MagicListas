<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ImageView
    android:id="@+id/adapterCarta"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:scaleType="fitXY"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />


  <TextView
    android:id="@+id/adapterTipo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="The Dark Knight"
    android:textSize="12sp"
    android:textStyle="bold"
      android:layout_below="@+id/adapterNombre"
      android:layout_alignStart="@+id/adapterNombre" />

  <TextView
    android:id ="@+id/adapterNombre"
    android:text="TextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="29dp"
      android:layout_alignTop="@+id/adapterCarta"
      android:layout_toEndOf="@+id/adapterCarta"
      android:layout_marginTop="20dp" />

  <TextView
    android:id="@+id/adapterColor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="The Dark Knight"
    android:textSize="12sp"
    android:textStyle="bold" android:layout_below="@+id/adapterTipo"
    android:layout_alignStart="@+id/adapterTipo" />

</RelativeLayout>
</layout>
